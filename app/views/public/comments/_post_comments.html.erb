<% if post.comments.present? %>
  <p><strong>コメント件数</strong>：<%= post.comments.count %></p>
  <% post.comments.each do |comment| %>
    <strong><%= comment.customer.nickname %></strong>
    <%= comment.created_at.strftime('%Y/%m/%d') %><strong>:　</strong>
    <%= comment.comment %>
    <% if comment.customer == current_customer %>
      <div class="comment-delete">
        <!--remote: trueを追加-->
        <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p>コメントはまだありません</p>
<% end %>