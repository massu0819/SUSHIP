<div>
  <h1>MY PAGE</h1>  
</div>

  <table>
    <tbody>
      <tr>
        <td><%= attachment_image_tag(@customer, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"40x40" ) %></td>
        <td><%= @customer.name %></td>
        <td>（<%= @customer.age %>）</td>
        <td><%= @customer.gender %></td>
        <td><%= @customer.posts.count %></td>
        <td>
          <% if @customer.id == current_customer.id %>
            <%= link_to 'プロフィール編集', edit_customer_path, class:" btn btn-danger btn-sm btn-block mb-3" %>
          <% else %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
<div>
  <h2>投稿一覧</h2>
</div>
　<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>店名</th>
      <th>住所</th>
      <th>いいね数</th>
      <th>コメント数</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.name, post_path(post) %></td>
        <td><%= post.address %></td>
        <td><%= post.favorites.count %></td>
        <td>コメント数: <%= post.comments.count %></td>
        <td>
          <% if post.customer.id == current_customer.id %>
            <%= link_to "編集", dit_post_path(post.id), class:"btn btn-success btn-sm btn-block mb-3" %>
          <% else %>
          <% end %>
        </td>
        <td>
          <% if post.customer.id == current_user.id %>
            <%= link_to '削除', post_path(post.id), method: :delete, class:"btn btn-danger btn-sm btn-block mb-3" %>
          <% else %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
　</table>