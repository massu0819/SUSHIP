<div>
  <h1>USERS</h1>  
</div>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>ニックネーム</th>
      <th>性別</th>
      <th>投稿数</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><td><%= attachment_image_tag(customer, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"40x40" ) %></td></td>
        <td><%= customer.nickname %></td>
        <td><%= customer.gender %></td>
        <td><%= customer.posts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>